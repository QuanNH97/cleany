<% content_for :for_content do %>
  <!-- ##### Breadcrumb Area Start ##### -->
  <div class="vizew-breadcrumb" style="padding-top: 20px; padding-bottom: 15px;">
      <div class="container">
          <div class="row">
              <div class="col-12">
                  <nav aria-label="breadcrumb">
                      <ol class="breadcrumb">
                          <li class="breadcrumb-item"><a href="<%= root_path %>"><i class="fa fa-home" aria-hidden="true"></i> Home</a></li>
                          <li class="breadcrumb-item active" aria-current="page">Signin</li>
                      </ol>
                  </nav>
              </div>
          </div>
      </div>
  </div>
  <!-- ##### Breadcrumb Area End ##### -->

  <!-- ##### Login Area Start ##### -->
  <div class="vizew-login-area section-padding-80" style="padding-top: 0">
      <div class="container">
          <div class="row justify-content-center">
              <div class="col-12 col-md-6">
                  <div class="login-content">
                      <!-- Section Title -->
                      <div class="section-heading">
                          <h4>Great to have you back!</h4>
                          <div class="line"></div>
                      </div>

                      <%= form_for :session, url: signin_path do |f| %>
                        <div class="form-group">
                          <%= f.email_field :email, placeholder: "Enter your email", class: "form-control" %>
                        </div>
                        <div class="form-group">
                          <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox mr-sm-2">
                                <!-- <input type="checkbox" class="custom-control-input" id="customControlAutosizing"> -->
                                <%= f.check_box :remember_me, class: "custom-control-input", id: "customControlAutosizing" %>
                                <label class="custom-control-label" for="customControlAutosizing">Remember me</label>
                                <%= link_to "Forgot Password", new_password_reset_path, class: "float-right", style: "color: orange; font-size: 18px; font-weight: bold" %>
                            </div>
                        </div>
                        <%= f.submit "Login", class: "btn vizew-btn w-100 mt-30" %>
                        <p style="text-align:center">------- or -------</p>
                        <%= link_to "Login as The Partner", partner_login_path, class: "btn vizew-btn w-100", style: "background-color:#4437db" %>
                        <div class="text-right">New to Website?
                          <%= link_to "Register", signup_path, style: "color: green" %>
                        </div>
                      <% end %>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <!-- ##### Login Area End ##### -->
<% end %>